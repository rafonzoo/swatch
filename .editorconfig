# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf

[*.{html,scss,svelte}]
indent_style = space
indent_size = 2

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,ts,jsx,tsx,cjs,mjs,json}]
indent_style = space
charset = utf-8
indent_size = 2
